<h1>Listing Packages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Sample required</th>
      <th>Timeframe days</th>
      <th>Audience size</th>
      <th>Target</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.name %></td>
        <td><%= package.description %></td>
        <td><%= package.price %></td>
        <td><%= package.sample_required %></td>
        <td><%= package.timeframe_days %></td>
        <td><%= package.audience_size %></td>
        <td><%= package.target_id %></td>
        <td><%= package.user_id %></td>
        <td><%= link_to 'Show', package %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Package', new_package_path, data: { no_turbolink: true }  %>
